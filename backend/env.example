# Database Configuration
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Server Configuration
PORT=8000
NODE_ENV=production

# Frontend URL (for CORS) - Set this to your frontend domain
FRONTEND_URL=https://your-frontend-domain.railway.app

# JWT Configuration
TOKEN_SECRET=your-super-secret-jwt-key-here

# HMAC Configuration for verification codes
HMAC_VERIFICATION_CODE_SECRET=your-hmac-secret-key-here

# Email Configuration (for nodemailer)
NODE_CODE_SENDING_EMAIL_ADDRESS=your-email@gmail.com
NODE_CODE_SENDING_EMAIL_PASSWORD=your-app-password

# Optional: MongoDB connection options
# MONGO_OPTIONS="retryWrites=true&w=majority"
